<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidERestaurant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlHighlight">@color/teal_transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@drawable/actionbar_layer_list_darkmode</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="floatingCardView">
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:color">?android:colorControlHighlight</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="tealButton">
        <item name="backgroundTint">@color/teal_500</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="textInput">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/default_grey</item>
    </style>

    <style name="textCart">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="homeBackground">
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="backCard">
        <item name="android:backgroundTint">@color/default_grey</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">-24dp</item>
    </style>

    <style name="homeCardButtons">
        <item name="android:backgroundTint">@color/default_grey</item>
    </style>
</resources>